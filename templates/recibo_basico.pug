doctype html
html(lang="en")
    head
        each val in stylesheets
            style(type="text/css")= val
        style(type="text/css").
            html {
                font-family: monospace
            }

            .receipt {
                min-width: 600px
            }
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Recibo
    body 
        br
        div(style={
            display: 'flex !important',
            'justify-content': 'center !important'
        })
            div(style={
                'background-color': '#fff',
                color: '#4a4a4a',
                'max-width': '100%',
                overflow: 'hidden',
                position: 'relative',
                'border-radius': '6px',
                'box-shadow': '0 0.5em 1em -0.125em rgb(10 10 10 / 10%), 0 0 0 1px rgb(10 10 10 / 2%)',
                'font-size': '1rem',
            })
                section(style={
                    'background-color': '#48c774',
                    color: '#fff',
                    padding: '1.25rem 2.5rem 1.25rem 1.5rem'
                }) 
                    h1 Emiliano Garza - Consultoria de Software 
                div(style={
                    'background-color': 'transparent',
                    padding: '1.5rem',
                    'min-width': '600px',
                }) Desglose de servicios
                table(style={
                    'border-collapse': 'collapse',
                    'border-spacing': '0',
                    'background-color': '#fff',
                    color: '#363636',
                    'margin-bottom': '0 !important',
                    width: '100%',
                })
                    thead(style={
                        'background-color': 'transparent'
                    })
                        tr
                            th(style={
                                border: '1px solid #dbdbdb',
                                padding: '.5em .75em',
                                'vertical-align': 'top',
                                'border-width': '0 0 2px',
                                color: '#363636',
                                'text-align': 'inherit'
                            }) Concepto
                            th(style={
                                border: '1px solid #dbdbdb',
                                padding: '.5em .75em',
                                'vertical-align': 'top',
                                'border-width': '0 0 2px',
                                color: '#363636',
                                'text-align': 'inherit'
                            }) Precio
                    tbody(style={
                        'background-color': 'transparent'
                    })
                        each row in services
                            tr 
                                td(style={
                                    border: '1px solid #dbdbdb',
                                    'border-width': '0 0 1px',
                                    padding: '.5em .75em',
                                    'vertical-align': 'top',
                                    'text-align': 'inherit'
                                })= row.service
                                td(style={
                                    border: '1px solid #dbdbdb',
                                    'border-width': '0 0 1px',
                                    padding: '.5em .75em',
                                    'vertical-align': 'top',
                                    'text-align': 'inherit'
                                })= "$" + row.cost
                        tr
                            td(style={
                                    border: '1px solid #dbdbdb',
                                    'border-width': '0 0 1px',
                                    padding: '.5em .75em',
                                    'vertical-align': 'top',
                                    'text-align': 'inherit',
                                    'border-bottom-width': '0'
                                }) Total
                            td(style={
                                    'font-weight': '700 !important',
                                    border: '1px solid #dbdbdb',
                                    'border-width': '0 0 1px',
                                    padding: '.5em .75em',
                                    'vertical-align': 'top',
                                    'text-align': 'inherit',
                                    'border-bottom-width': '0'
                                })= "$" + total
                div(style={
                    'background-color': 'transparent',
                    padding: '1.5rem',
                    'min-width': '600px',
                }) Medios de pago
                table(style={
                    'border-collapse': 'collapse',
                    'border-spacing': '0',
                    'background-color': '#fff',
                    color: '#363636',
                    'margin-bottom': '0 !important',
                    width: '100%',
                })
                    tbody(style={
                        'background-color': 'transparent'
                    })
                        tr 
                            td(style={
                                    'font-weight': '700 !important',
                                    border: '1px solid #dbdbdb',
                                    'border-width': '0 0 1px',
                                    padding: '.5em .75em',
                                    'vertical-align': 'top',
                                    'text-align': 'inherit',
                                    'border-bottom-width': '0'
                                }) CLABE
                            td(style={
                                    'font-weight': '700 !important',
                                    border: '1px solid #dbdbdb',
                                    'border-width': '0 0 1px',
                                    padding: '.5em .75em',
                                    'vertical-align': 'top',
                                    'text-align': 'inherit',
                                    'border-bottom-width': '0'
                                }) #{clabe}
                div(style={
                    'border-radius': '4px',
                    position: 'relative',
                    padding: '1.25rem 2.5rem 1.25rem 1.5rem',
                    'background-color': '#48c774',
                    color: '#fff'
                })
                    div 
                        a(href = "mailto:" + mail, style={
                            color: '#fff'
                        }) #{mail}
                    div 
                        a(href = "tel: +521" + tel, style={
                            color: '#fff'
                        }) #{tel}
                

                    
                
            